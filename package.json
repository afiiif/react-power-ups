{
  "name": "react-power-ups",
  "version": "2.0.0",
  "description": "Collection of simple React hooks",
  "keywords": [
    "react",
    "hooks",
    "utilities"
  ],
  "author": "Muhammad Afifudin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/afiiif/react-power-ups"
  },
  "bugs": {
    "url": "https://github.com/afiiif/react-power-ups/issues"
  },
  "homepage": "https://github.com/afiiif/react-power-ups#readme",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn clean && yarn build:cjs && yarn build:es",
    "prepublishOnly": "yarn build",
    "clean": "rimraf lib esm",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "code-check": "yarn format:fix && yarn lint && yarn lint:types",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.0.7",
    "typescript": "^4.7.4",
    "semantic-release": "^20.1.1"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "alpha",
        "prerelease": true
      },
      {
        "name": "beta",
        "prerelease": true
      },
      "next"
    ]
  }
}
